<Window x:Class="PL.Task.TaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Task"
        mc:Ignorable="d"
        Title="TaskWindow" Height="700" Width="800"
        DataContext="{Binding viewModel, RelativeSource={RelativeSource Self}}" >
    <Grid>
        <Label Content="Id" Margin="55,30,0,0"/>
        <Label Content="Alias"  Margin="55,70,0,0"/>
        <Label Content="Description" Margin="55,110,0,0"/>
        <Label Content="CreatedAtDate" Margin="55,150,0,0"/>
        <Label Content="Status" Margin="55,190,0,0"/>
        <Label Content="Dependencies" Margin="497,39,0,0"/>
        <Label Content="RequiredEffortTime" Margin="55,234,0,0" Width="208"/>
        <Label Content="Milestone" Margin="55,274,0,0"/>
        <Label Content="ScheduledStartDate" Margin="55,314,0,0"/>
        <Label Content="StartDate" Margin="55,354,0,0"/>
        <Label Content="DeadlineDate" Margin="55,394,0,0"/>
        <Label Content="CompleteDate" Margin="55,434,0,0"/>
        <Label Content="Deliverables" Margin="55,474,0,0"/>
        <Label Content="Remarks" Margin="55,514,0,0"/>
        <Label Content="Engineer" Margin="55,554,0,0"/>
        <Label Content="ComplexityLevel" Margin="55,594,0,0" Width="170"/>
        <TextBox Text="{Binding CurrentTask[0].Id, Mode=TwoWay, NotifyOnValidationError=true,  ValidatesOnExceptions=true}" Width="250" IsEnabled="False" Margin="210,30,0,0" MaxLength="9" PreviewKeyDown="IdOrCost_PreviewKeyDown" />
        <TextBox Text="{Binding CurrentTask[0].Alias, Mode=TwoWay, NotifyOnValidationError=true,  ValidatesOnExceptions=true}"  Margin="210,70,0,0"  Width="250"/>
        <TextBox Text="{Binding CurrentTask[0].Description, Mode=TwoWay, NotifyOnValidationError=true,  ValidatesOnExceptions=true}" Margin="210,110,0,0"  Width="250"/>
        <DatePicker SelectedDate="{Binding CurrentTask[0].CreatedAtDate, Mode=TwoWay, NotifyOnValidationError=true,  ValidatesOnExceptions=true}" Margin="210,140,0,0"  HorizontalAlignment="Left" VerticalAlignment="Top" Height="35" Width="250"/>
        <ComboBox ItemsSource="{Binding  Source={StaticResource StatusCollectionKey}}" SelectedValue="{Binding CurrentTask[0].Status, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" Margin="210,190,0,0"  Width="250" HorizontalAlignment="Left" Background="White" VerticalAlignment="Top" Height="25" />
        <StackPanel Orientation="Vertical" Margin="497,73,25,457">
            <ListView ItemsSource="{Binding CurrentTask[0].Dependencies}" Height="100"/>

            <Button Content="Add dependency" Height="30" Width="126" Click="Btn_addDependencyClick"/>
        </StackPanel>
        <!--<TextBox Text="{Binding Dependencies, Mode=TwoWay, NotifyOnValidationError=true,  ValidatesOnExceptions=true}" Margin="210,230,0,0"  Width="250"/>-->
        <TextBox Text="{Binding CurrentTask[0].RequiredEffortTime, Mode=TwoWay, NotifyOnValidationError=true,  ValidatesOnExceptions=true}" Margin="210,234,0,0"  Width="250"/>
        <TextBox Text="{Binding CurrentTask[0].Milestone.Id, Mode=TwoWay, NotifyOnValidationError=true,  ValidatesOnExceptions=true}"  Margin="277,274,0,0"  Width="183"/>
        <TextBox Text="{Binding CurrentTask[0].Milestone.Alias, Mode=TwoWay, NotifyOnValidationError=true,  ValidatesOnExceptions=true}"  Margin="210,274,0,0"  Width="62"/>
        <DatePicker SelectedDate="{Binding CurrentTask[0].ScheduledStartDate, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"  Margin="210,314,0,0"  HorizontalAlignment="Left" VerticalAlignment="Top" Height="35" Width="250" IsEnabled="False"/>
        <DatePicker SelectedDate="{Binding CurrentTask[0].StartDate, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"  Margin="210,354,0,0"  HorizontalAlignment="Left" VerticalAlignment="Top" Height="35" Width="250"/>
        <DatePicker SelectedDate="{Binding CurrentTask[0].DeadlineDate, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"  Margin="210,394,0,0"  HorizontalAlignment="Left" VerticalAlignment="Top" Height="35" Width="250" IsEnabled="False"/>
        <DatePicker SelectedDate="{Binding CurrentTask[0].CompleteDate, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"  Margin="210,434,0,0"  HorizontalAlignment="Left" VerticalAlignment="Top" Height="35" Width="250"/>
        <TextBox Text="{Binding CurrentTask[0].Deliverables, Mode=TwoWay, NotifyOnValidationError=true,  ValidatesOnExceptions=true}"  Margin="210,474,0,0"  Width="250"/>
        <TextBox Text="{Binding CurrentTask[0].Remarks, Mode=TwoWay, NotifyOnValidationError=true,  ValidatesOnExceptions=true}" Margin="210,514,0,0"  Width="250"/>
        <ComboBox ItemsSource="{Binding EngineerList}"
          DisplayMemberPath="Name" 
          SelectedValuePath="Id"
          SelectedValue="{Binding CurrentTask[0].Engineer.Id, Mode=TwoWay}" Margin="323,554,0,0" RenderTransformOrigin="0.502,0.344" HorizontalAlignment="Left" Background="White" VerticalAlignment="Top" Width="137" Height="25"
         />
        <TextBox Text="{Binding CurrentTask[0].Engineer.Id, Mode=TwoWay, NotifyOnValidationError=true,  ValidatesOnExceptions=true}" Margin="210,554,0,0"  Width="108"/>
        <ComboBox ItemsSource="{Binding Source={StaticResource EngineerExperienceCollectionKey}}"
           SelectedValue="{Binding CurrentTask[0].ComplexityLevel, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" Margin="210,594,0,0"  Width="250" HorizontalAlignment="Left" Background="White" VerticalAlignment="Top"/>
        <!--add or update task-->
        <Button Content="{Binding CurrentTask[0].Id, Mode=OneTime, Converter={StaticResource ConverIdToContentKey}}" Click="ButtonAddOrUpdateTask_Click" Margin="633,594,0,0" HorizontalAlignment="Left" Height="58" Width="103"/>
    </Grid>
</Window>

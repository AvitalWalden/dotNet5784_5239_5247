<Window x:Class="PL.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="AdminWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/image.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Button Content="Handle Engineer" Margin="0,82,0,0" Click="BtnEngineer_Click" Width="120" Background="{x:Null}"/>
        <Button Grid.Column="1" Content="Handle Task" Margin="0,82,0,0" Click="BtnTask_Click" Width="120" Background="{x:Null}"/>
        <Button Grid.Column="2" Content="Reset" Margin="0,82,0,0" Click="BtnReset_Click" Width="120" Background="{x:Null}"/>
        <!-- milstone -->
        <Button Grid.Column="3" Content="Milestone" Margin="0,82,0,0" Width="120" RenderTransformOrigin="0.467,-0.976" Click="BtnMilstone_Click" Background="{x:Null}"/>
    </Grid>
</Window>
